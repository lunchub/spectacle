%div#password_edit.row

  %section.four.columns.centered.text-center

    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), html: { method: :put } ) do |f|

      = f.error_notification
      = f.input :reset_password_token, :as => :hidden
      = f.full_error :reset_password_token

      %ul.field
        %li
          = f.input_field :password, autofocus: true, class: 'input xwide ', placeholder: 'New Password'
        %li
          = f.input_field :password_confirmation, class: 'input xwide ', placeholder: 'Confirm new password'
        %li
          %div.primary.btn.medium.xwide
            = f.submit 'Change my password'

      = render "devise/shared/links"
