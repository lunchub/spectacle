= form_for @page_action do |f|
  - if @page_action.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page_action.errors.count, "error")} prohibited this page_action from being saved:"
      %ul
        - @page_action.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
