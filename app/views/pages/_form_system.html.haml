%fieldset
  %legend フォーム

  %h5 フィールド
  %table.striped
    %thead
      %tr
        %th 表示要素
        %th フォームタイプ
        %th{style: 'width:10%;'}  必須
        %th{style: 'width:40%;'} バリデーション
        %th{style: 'width:10%;'}
    %tbody
      = f.simple_fields_for :page_form_elements do |page_form_element_form|
        = render 'page_form_element_fields', f: page_form_element_form

  = link_to_add_association 'フォーム要素を追加', f, :page_form_elements, { data: {:'association-insertion-traversal' => 'prev',  :'association-insertion-node' => 'table',  :'association-insertion-method' => :append} }

