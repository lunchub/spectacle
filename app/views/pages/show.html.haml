%div.row
  %h2
    = @page.title
    ページ

%div.row

  %h2.twelve.columns
    %div.default.xlarge.btn
      = link_to 'List', pages_path
    %div.info.xlarge.btn
      = link_to 'History', '#'
    %div.primary.xlarge.btn.pull_right
      = link_to 'Edit', edit_page_path

%div.row

  %div.twelve.columns
    
    %section.tabs
      %ul.tab-nav
        %li
          = link_to 'イメージ', '#'
        %li.active
          = link_to '機能仕様書', '#'
        %li
          = link_to 'デザイン指示書', '#'

      %div.tab-content
        = render 'show_images'

      %div.tab-content.active
        = render 'show_system'

      %div.tab-content
        = render 'show_design'
