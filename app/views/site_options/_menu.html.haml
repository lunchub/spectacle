%h2.twelve.columns
  - if @site_option.new_record?
    %div.warning.xlarge.btn
      = link_to 'Cancel', site_options_path

  - if @site_option.persisted?
    %div.default.xlarge.btn
      = link_to 'List', site_options_path
    %div.info.xlarge.btn
      = link_to 'Show', site_option_path
    %div.primary.xlarge.btn.pull_right
      = f.submit 'Update'

  - if @site_option.new_record?
    %div.primary.xlarge.btn.pull_right
      = f.submit 'Save'
