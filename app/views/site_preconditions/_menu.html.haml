%h2.twelve.columns
  - if @site_precondition.new_record?
    %div.warning.xlarge.btn
      = link_to 'Cancel', site_preconditions_path

  - if @site_precondition.persisted?
    %div.default.xlarge.btn
      = link_to 'List', site_preconditions_path
    %div.info.xlarge.btn
      = link_to 'Show', site_precondition_path
    %div.primary.xlarge.btn.pull_right
      = f.submit 'Update'

  - if @site_precondition.new_record?
    %div.primary.xlarge.btn.pull_right
      = f.submit 'Save'
