%h2.twelve.columns
  - if @validation.new_record?
    %div.warning.xlarge.btn
      = link_to 'Cancel', validations_path

  - if @validation.persisted?
    %div.default.xlarge.btn
      = link_to 'List', validations_path
    %div.info.xlarge.btn
      = link_to 'Show', validation_path
    %div.primary.xlarge.btn.pull_right
      = f.submit 'Update'

  - if @validation.new_record?
    %div.primary.xlarge.btn.pull_right
      = f.submit 'Save'
